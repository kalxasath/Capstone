<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wvp_backgroundColor">

    <TextView
        android:id="@+id/vehicle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Peugeot 307sw - Total running costs"
        android:textSize="@dimen/ilw_title_text_size"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="@dimen/ilw_margin_start_end"
        android:layout_marginEnd="@dimen/ilw_margin_start_end"
        android:layout_marginTop="@dimen/ilw_margin_top_bottom"
        android:layout_marginBottom="@dimen/ilw_margin_top_bottom"
        />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lv_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="invisible"
        android:text="@string/no_dashboard_data_available" />

    <!-- The waiting spinner -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_height="42dp"
        android:layout_width="42dp"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>
